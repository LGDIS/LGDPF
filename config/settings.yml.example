# -*- coding:utf-8 -*-
development:
  version: "v1.0.0"
  # 動作種別(0=通常モード, 1=災害訓練モード, 2=通信試験モード)
  run_mode: 0
  # 画面のHeaderに表示するバナーの設定
  banner:
    # Rails.root/app/assets/imagesに参照する画像ファイルを置く
    image_file:
    description:
  # sheltersテーブルの同期元情報
  shelter_source:
    uri: http://localhost:3000/public/plugin_assets/lgdis/privates/
    timeout: 60
    basic_auth:
      username:
      password:
  # SMTPサーバの設定
  mail:
    address: smtp.example.com
    port: 587
    authentication: :plain
    user_name: username
    password: password
    domain: smtp.example.com
    enable_starttls_auto: true
    sender: saitai@example.com
    host: localhost:3000

